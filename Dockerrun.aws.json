{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "sslData",
      "host": {
        "sourcePath": "ssl_data"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "client",
      "image": "dennisjs/blog-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "dennisjs/blog-server",
      "hostname": "api",
      "essential": false,
      "memory": 256
    },
    {
      "name": "nginx",
      "image": "dennisjs/blog-nginx",
      "hostname": "nginx",
      "essential": true,
      "environment": [
        {
          "name": "CERTBOT_EMAIL",
          "value": "dennis.jsyi@gmail.com"
        },
        {
          "name": "ALLOWED_DOMAINS",
          "value": "jsydennis"
        },
        {
          "name": "SITES",
          "value": "jsydennis.com=nginx:80"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "sslData",
          "containerPath": "/etc/resty-auto-ssl",
          "readOnly": true
        }
      ],
      "links": ["client", "server"],
      "memory": 128
    }
  ]
}